Jenkins file 
pipeline {
    agent{
       label 'docker'
    }

    environment {

    DOCKERHUB_CREDENTIALS = credentials('dockerhub')
     registry = "shivabaljapalli/lms-public-jenkins"
        registryCredential = 'dockerhub'
       
    }

    stages {
        
        
        stage('Building the docker image') {
            steps {
                sh 'cd api && docker build -t shivabaljapalli/backend-pipeline'
            }
        }
        stage('Logging into dockerhub account') {
            steps {
                sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
            }
        }
        stage('pushing the docker image into dockerhub') {
            steps {
                  sh 'docker push shivabaljapalli/backend-pipeline'
            }
        }
        stage('Remove old docker images') {
             steps {
                 sh 'docker rmi -f shivabaljapalli/backend-pipeline'
            }
        }
         stage('creating database container') {
             steps {
                 sh 'docker container rm --force lms-pipeline'
                 sh 'docker run -d -p 5432:5432 --network lmsnetwork -e  POSTGRES_PASSWORD=password --name lms-pipeline postgres'
            }
        }
         stage('Running the docker container') {
            steps {
                  sh 'docker container rm --force backend-pipeline'
                  sh 'docker run -d -p 8080:8080 --network lmsnetwork -e DATABASE_URL=postgresql://postgres:password@lmsdb:5432/postgres --name backend-pipeline -e PORT=8080 -e MODE=local  shivabaljapalli/backend-lms1'
            }
        }
    }
}
